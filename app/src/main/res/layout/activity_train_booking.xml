<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/lgbg3"
    tools:context=".TrainBookingActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        card_view:cardCornerRadius="30dp"
        card_view:cardElevation="20dp"
        android:background="@drawable/custom_edittext">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">


            <!-- Center-aligned TextView for Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/LoginText"
                android:text="Ticket Booking"
                android:textSize="24sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <!-- Username ImageButton -->
            <ImageButton
                android:id="@+id/btnProfile"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/round_button"
                android:layout_gravity="end" />


            <!-- Select Date TextView -->
            <TextView
                android:id="@+id/textViewDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Select Date:"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal" />

            <!-- DatePicker -->
            <DatePicker
                android:id="@+id/datePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:headerBackground="@color/orange"
                android:layout_gravity="center_horizontal" />

            <!-- Start Station Dropdown -->
            <TextView
                android:id="@+id/textViewStartStation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Select Start Station:"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal" />

            <!-- Spinner for Start Station -->
            <Spinner
                android:id="@+id/spinnerStartStation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal" />

            <!-- Destination Station Dropdown -->
            <TextView
                android:id="@+id/textViewDestinationStation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Select Destination Station:"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal" />

            <!-- Spinner for Destination Station -->
            <Spinner
                android:id="@+id/spinnerDestinationStation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal" />

            <!-- Book Train Button -->
            <Button
                android:id="@+id/btnBookTrain"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/orange"
                android:text="Book Train"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:cornerRadius="20dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>



</ScrollView>

